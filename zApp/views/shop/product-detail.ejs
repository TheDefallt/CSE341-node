<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1 class="product_title"><%= `${product.make} ${product.model}` %></h1>
        <div>
            <img class="detail-img" src="<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <h2 class="product_price"><%= `Price: $${product.price}` %></h2>
        <h3 class="product_year"><%= `Year: ${product.year}` %></h3>
        <p class="product_description"><%= `Description: ${product.description}` %></p>
        <%- include('../includes/add-to-cart.ejs', {product: product}) %>
    </main>
    <%- include('../includes/end.ejs') %>