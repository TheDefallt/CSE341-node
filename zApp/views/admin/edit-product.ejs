<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/admin/<% if (editing) {%>edit-product<%} else {%>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="make">Make</label>
                    <input type="text" name="make" id="make"  value="<% if (editing) {%><%=product.make%><% } %>">
            </div>
            <div class="form-control">
                <label for="model">Model</label>
                    <input type="text" name="model" id="model" value="<% if (editing) {%><%=product.model%><% } %>">
            </div>
            <div class="form-control">
                <label for="year">Year</label>
                    <input type="text" name="year" id="year"  value="<% if (editing) {%><%=product.year%><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                    <input type="text" name="imageUrl" id="imageUrl"  value="<% if (editing) {%><%=product.imageUrl%><% } %>">
            </div>
            <div class="form-control">
                <label for="category">Category</label>
                    <input type="text" name="category" id="category"  value="<% if (editing) {%><%=product.category%><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                    <input type="number" name="price" id="price" step="0.01"  value="<% if (editing) {%><%=product.price%><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                    <textarea name="description" id="description" rows="5"><% if (editing) {%><%=product.description%><% } %></textarea>
            </div>

            <button type="submit"><% if (editing) {%>Update Product<%} else {%>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>