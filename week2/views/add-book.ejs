<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="book-form shadow" action="add-book" method="POST">
            <h1>Book Entry</h1>
            <div class="form-control">
                <label for="title">Title</label>
                    <input type="text" name="title" id="title">
                <label for="price">Price ($ will be added automatically)</label>
                    <input type="text" name="price" id="price">
                <label for="summary">Summary</label>
                    <textarea placeholder="Enter a summary of the book" name="summary" id="summary"></textarea>
            </div>
            <button type="submit">Submit</button>
        </form>
    </main>
